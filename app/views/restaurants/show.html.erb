<h1><%= @restaurant.name %></h1>

<h2><%= "Address: #{@restaurant.address}" %></h2>

<h2><% @restaurant.reviews.each do |review| %></h2>
<li><%= "#{review.content} #{review.rating}" %></li>
<% end %>

<%= link_to 'edit', edit_restaurant_path, class: "btn btn-primary"  %>


<%= link_to 'home', restaurants_path, class: "btn btn-primary" %>

<h2>Review</h2>
<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
